<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.alejandro.seccion_06_fragments_lab.Fragments.DetailsFragment">

    <LinearLayout
        android:id="@+id/fragmentDetailsMailWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject: "
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewFragmentSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¿Quieres conseguir premio?"
                android:textSize="21dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From: "
                android:textSize="21dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textViewFragmentSenderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="alejandrofpo@gmail.com"
                android:textSize="21dp" />


        </LinearLayout>


        <TextView
            android:id="@+id/textViewFragmentMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textSize="18dp" />


    </LinearLayout>


</FrameLayout>
